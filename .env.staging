# Staging Environment Configuration
# This file contains staging-specific overrides for the base .env configuration

# Application Configuration
ENVIRONMENT=staging
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration (override with staging database URL)
DATABASE_URL=postgresql+asyncpg://codereview_staging:password@staging-db:5432/codereview_staging
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis Configuration (staging)
REDIS_HOST=staging-redis
REDIS_PORT=6379

# AI Services Configuration
# Replace with staging API keys
ANTHROPIC_API_KEY=your_staging_anthropic_api_key

# GitHub Integration
GITHUB_TOKEN=your_staging_github_token

# Security Configuration
SECRET_KEY=your-staging-secret-key-change-this

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_PERIOD=900

# Message Queue Configuration
QUEUE_URL=amqp://staging-rabbitmq

# Monitoring and Observability
SENTRY_DSN=your_staging_sentry_dsn
SENTRY_ENABLED=true
SENTRY_TRACES_SAMPLE_RATE=0.5

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging Configuration
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=https://staging.yourdomain.com,https://staging-api.yourdomain.com
